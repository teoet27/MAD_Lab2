<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.timeslot.EditSingleTimeslot">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_total"
            android:backgroundTint="#DADADA"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/prussian_blue"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="8"
                        android:fontFamily="sans-serif-black"
                        android:text="Electrician Assistance for Small Houses"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0"
                    android:background="@drawable/rounded_corners_total"
                    android:backgroundTint="#FF0000"
                    android:contentDescription='@string/more_button_for_opening_the_edit_menu'
                    android:padding="2dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    app:tint="@color/white" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@color/orange_poli"
                android:contentDescription='@string/separation_line'
                android:paddingTop="2dp"
                android:src="@drawable/rounded_corners_land" />

            <TextView
                android:id="@+id/ads_descriptionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/description_of_the_job_offered"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:hint="Describe accurately what you offer."
                android:minHeight="48dp"
                android:textColor="@color/prussian_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ads_listOfSkillsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/select_your_skills"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/editTimeslotSkillChipGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/editTimeslotAddSkillChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </com.google.android.material.chip.ChipGroup>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#AAABAE"
                android:contentDescription='@string/separation_line'
                android:paddingTop="5dp"
                android:src="@drawable/rounded_corners_land" />

            <EditText
                android:id="@+id/editLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="5dp"
                android:hint="Location"
                android:minHeight="48dp"
                android:textColor="@color/prussian_blue"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_location_on_black_24dp"
                app:drawableTint="#454749" />

            <TextView
                android:id="@+id/editStartingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="5dp"
                android:hint="Starting time"
                android:inputType="none"
                android:minHeight="48dp"
                android:textColor="@color/prussian_blue"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_watch_later_black_24dp"
                app:drawableTint="#454749" />

            <TextView
                android:id="@+id/editEndingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="5dp"
                android:hint="Ending time"
                android:inputType="none"
                android:minHeight="48dp"
                android:textColor="@color/prussian_blue"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_watch_later_black_24dp"
                app:drawableTint="#454749" />

            <TextView
                android:id="@+id/editDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:text="Date"
                android:textColor="#808080"
                android:textSize="20sp"
                app:drawableLeftCompat="@drawable/ic_calendar_month"
                app:drawableTint="#454749" />

            <DatePicker
                android:id="@+id/editDatePicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/discardButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/red_deleting"
            android:text="Discard" />

        <Button
            android:id="@+id/confirmButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:backgroundTint="#018703"
            android:text="Confirm your changes" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>