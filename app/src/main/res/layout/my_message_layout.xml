<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myMainContainerID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="@dimen/distance_between_messages"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/myMessageContainerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/my_message_bubble"
        android:backgroundTint="@color/my_bubble">

        <TextView
            android:id="@+id/myMessageTextViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="@dimen/message_font_size" />

    </FrameLayout>

    <TextView
        android:id="@+id/myTimestampID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:text="TIMESTAMP"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/timestamp_font_size"
        android:visibility="visible" />
</LinearLayout>