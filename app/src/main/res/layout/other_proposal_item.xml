<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/otherMainContainerProposalID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:layout_marginBottom="@dimen/distance_between_messages"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/otherMessageContainerProposalID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/common_message_bubble"
        android:backgroundTint="@color/other_bubble"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="4dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="Location:"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/message_font_size"
                android:textStyle="bold"
                app:drawableTint="@color/darkGray" />

            <TextView
                android:id="@+id/otherLocationTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="TextView"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/message_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_watch_later_black_24dp"
                android:drawablePadding="4dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="Starting time:"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/message_font_size"
                android:textStyle="bold"
                app:drawableTint="@color/darkGray" />

            <TextView
                android:id="@+id/otherStartingTimeTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="TextView"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/message_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:drawablePadding="4dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="Duration:"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/message_font_size"
                android:textStyle="bold"
                app:drawableTint="@color/darkGray" />

            <TextView
                android:id="@+id/otherDurationTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="TextView"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/message_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatAnswerContainerID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/chatContentViewID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/chatRejectID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:background="@color/reject_color"
                android:gravity="center"
                android:text="Reject"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chatAcceptID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:background="@color/accept_color"
                android:gravity="center"
                android:text="Accept"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/otherProposalTimestampID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:text="TIMESTAMP"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/timestamp_font_size"
        android:visibility="visible" />
</LinearLayout>