<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="myActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.MAD_Lab2" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prussian_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/prussian_blue</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionBarStyle">@style/myActionBar</item>
        <item name="android:textColorHint">#808080</item>
    </style>

    <style name="Theme.MAD_Lab2_EditMode" parent="Theme.MAD_Lab2">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/prussian_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="titleTextColor">@color/prussian_blue</item>
        <item name="android:textColorHint">#808080</item>
    </style>

    <style name="Theme.MAD_Lab2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MAD_Lab2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MAD_Lab2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>